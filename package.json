{
  "name": "blogs-api",
  "description": "API service for the CRUD operations on blogs database",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "nodemon src/index.js",
    "start:dev": "NODE_ENV=development nodemon  --watch src/index.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "migrate": "knex migrate:latest --knexfile db/knexfile.js",
    "migrate:create": "knex migrate:make --knexfile db/knexfile.js",
    "prettify": "prettier --single-quote --print-width 120  --write\"src/**/*.js\""
  },
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "camelize": "^1.0.0",
    "cors": "^2.8.5",
    "diskdb": "^0.1.1",
    "dotenv": "^16.0.1",
    "express": "^4.17.2",
    "express-jwt": "^7.7.5",
    "helmet": "^5.1.0",
    "http-status-code": "^2.1.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^2.0.16",
    "npm-watch": "^0.11.0",
    "pg": "^8.7.3",
    "pgtools": "^0.1.1",
    "serve-favicon": "^2.5.0",
    "snakeize": "^0.1.0",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2"
  }
}
